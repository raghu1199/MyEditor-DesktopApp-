{
  "name": "kodin",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev": "vite --config vite.config.mjs",
    "build": "vite build --config vite.config.mjs",
    "preview": "vite preview --config vite.config.mjs",
    "start": "cross-env NODE_ENV=development electron .",
    "serve": "cross-env NODE_ENV=production electron .",
    "rebuild": "electron-rebuild -f -w @lydell/node-pty",
    "dist": "npm run build && npm run rebuild && electron-builder"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "electron": "^37.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^5.4.10",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "firebase": "^12.1.0",
    "highlight.js": "^11.11.1",
    "marked": "^11.1.1",
    "monaco-editor": "^0.52.0",
    "split.js": "^1.6.5"
  },
  "build": {
    "appId": "com.kodin.app",
    "productName": "Kodin",
    "copyright": "Â© 2025 Raghvendra",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
